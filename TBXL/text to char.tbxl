100 ?"ENTER NAME TO CONVERT: ";:INPUT A$
110 N=LEN(A):DIM O$(3*N),H$(15)
120 H$="123456789ABCDEF"
130 FOR I = 1 TO N
140   J=3*(I-1)+1
150   O=ASC(A$(I,I))
160   D = O/16
170   H1 = INT(O/16)
180   H2 = O MOD 16

190   O$(J,J)="\5C"
200   IF O<=15
210     O$(J+1,J+1)="0"  
220   ELSE
230     O$(J+1,J+1)=H$(H1,H1)
240   ENDIF
250   O$(J+2,J+2)=H$(H2,H2)
260 NEXT I

270 PRINT O$