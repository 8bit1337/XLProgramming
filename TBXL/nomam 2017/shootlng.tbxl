320 POSITION 15,0:PRINT #6;"bases"
330 POSITION 17,1:PRINT #6;"3"
340 POSITION 9,6 :PRINT #6;"Z["
350 POSITION 9,7 :PRINT #6;"\]"
360 MOVE S,R,Q
400 DO
405   SOUND 
410   WHILE STRIG(0)=1:WEND
420   B=3
425   MOVE R,S,Q
430   C=14
435   D=0
440   P=0
445   U=0
450   GOSUB 900
455   WHILE B
460     D=D+1
465     SOUND 1,PEEK(Z+INT(U/3)),10,5
470     IF D=C
500       E=PEEK(S+128)+PEEK(S+109)+PEEK(S+131)+PEEK(S+169)
505       IF E<>0
510         SOUND 0,243,10,5
515         B=B-1
520       ENDIF
525       MOVE S+40,T+20,200
530       FOR I=0 TO 5
535         E=Y+3*I
600         MOVE T+PEEK(E),S+PEEK(E+1),PEEK(E+2)
605       NEXT I
610       GOSUB 900
615       D=0
620       IF C=2
625         C=3
630       ELSE
635         C=C-1
640       ENDIF
650     ENDIF
660     K=STICK(0)
665     IF K=PEEK(X)
670       FOR I=1 TO 16:NEXT I
705     ELSE
710       POKE X,K
715       FOR I=0 TO 3
720         E=W+5*I
725         IF K=PEEK(E)
730           F=PEEK(Z+13+I)
735           FOR J=1 TO 4
740             G=S+PEEK(E+J)
750             IF PEEK(G)<>0
755               SOUND 0,29,10,5
800               P=P+1
805               POKE G,0
810               POKE G+F,0
815             ENDIF
820           NEXT J
825         ENDIF
830       NEXT I
835     ENDIF
840     POSITION 1,1 :PRINT #6;P
850     POSITION 17,1:PRINT #6;B
860     U=(U+1) MOD 39
865     SOUND 0,0,0,0
870   WEND
875 LOOP
900 E=RAND(4)
905 F=A+6*E
910 POSITION PEEK(F),PEEK(F+1)
915 ?#6;CHR$(PEEK(F+4))
920 POSITION PEEK(F+2),PEEK(F+3)
925 ?#6;CHR$(PEEK(F+5))
930 RETURN


