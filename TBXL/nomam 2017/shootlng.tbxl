200 X=A+61
205 MOVE A,N+432,64
210 A$="\05\06\05\07\D8\D9\09\02\0A\02\D6\D7\0D\06\0D\07\D8\D9\09\0B\0A\0B\D6\D7\68\7D\04\7C\91\04\00\28\50\70\83\04\84\97\04\A0\A0\50\80\79\6D\60\5B\6C\5B\60\79\60\6C\80\6C\14\01\14\01"
